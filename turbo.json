{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "globalDependencies": ["patches/**", "yarn.lock"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "export": {
      "dependsOn": ["build"],
      "outputs": ["out/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
