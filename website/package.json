{
  "name": "website",
  "version": "0.0.0",
  "scripts": {
    "build": "next build",
    "dev": "yarn prebuild && next dev",
    "export": "next export",
    "favicons": "npx favicons-compiled-cli -i public/icon.png -c config/favicons.json -o public/assets/",
    "graphql": "env-cmd yarn graphql-codegen",
    "lint": "eslint --fix \"**/*.{js,cjs,mjs,jsx,graphql,gql,ts,tsx}\" && tsc --noEmit --pretty",
    "postbuild": "next-sitemap --config config/sitemap.js",
    "prebuild": "node scripts/prebuild.js",
    "start": "next start"
  },
  "dependencies": {
    "@fontsource/plus-jakarta-sans": "^4",
    "@griko/private-fonts": "*",
    "@headlessui/react": "^1",
    "@project/tailwind-animations": "*",
    "@radix-ui/react-tooltip": "next",
    "@tailwindcss/aspect-ratio": "^0",
    "@tailwindcss/forms": "^0",
    "@tailwindcss/line-clamp": "^0",
    "@tailwindcss/typography": "^0",
    "autoprefixer": "^10",
    "clsx": "^1",
    "date-fns": "^2",
    "date-fns-tz": "^1",
    "fathom-client": "^3",
    "feed": "^4",
    "graphql": "^16",
    "graphql-tag": "^2",
    "graphql-web-lite": "^16",
    "lucide-react": "^0",
    "next-mdx-remote": "4.0.1",
    "next": "^12",
    "next-seo": "^5",
    "next-sitemap": "^1",
    "next-superjson": "^0",
    "next-transpile-modules": "^9",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-hot-toast": "^2",
    "react-query": "^3",
    "rehype-pretty-code": "^0",
    "remark-gfm": "^3",
    "shiki": "^0",
    "superjson": "^1",
    "tailwindcss": "^3",
    "tinykeys": "^1",
    "typescript": "^4",
    "zustand": "^3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3",
    "@graphql-codegen/cli": "^2",
    "@graphql-codegen/schema-ast": "^2",
    "@graphql-codegen/typescript": "^2",
    "@graphql-codegen/typescript-operations": "^2",
    "@graphql-codegen/typescript-react-query": "^3",
    "@types/node": "^14",
    "@types/react": "^18",
    "@types/tailwindcss": "^3"
  },
  "eslintConfig": {
    "extends": [
      "@project/eslint-config"
    ],
    "ignorePatterns": [
      ".next",
      "__generated__",
      "node_modules",
      "out",
      "public/assets"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "**/*.{js,cjs,mjs,ts,tsx}": [
      "yarn workspace website eslint --fix"
    ]
  },
  "prettier": "@project/prettier-config",
  "license": "MIT"
}
