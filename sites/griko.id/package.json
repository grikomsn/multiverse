{
  "name": "griko.id",
  "version": "8.0.0",
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "next build && next-sitemap --config config/sitemap.cjs",
    "clean": "shx rm -rf .next/",
    "dev": "next",
    "lint": "eslint --fix \"**/*.{js,cjs,mjs,jsx,ts,tsx}\" && tsc --noEmit --pretty",
    "scripts:favicons": "node scripts/favicons.mjs",
    "vercel-build": "cd ../.. && yarn build:griko.id",
    "#": "-------------------------------------------------------------------"
  },
  "dependencies": {
    "@atomiks/mdx-pretty-code": "^0",
    "@fontsource/jetbrains-mono": "^4",
    "@fontsource/lexend": "^4",
    "@mantine/hooks": "^3",
    "@mdx-js/loader": "2.0.0-rc.2",
    "@mdx-js/mdx": "2.0.0-rc.2",
    "@mdx-js/react": "2.0.0-rc.2",
    "@packages/assets": "*",
    "@packages/hooks": "*",
    "@packages/lockfile-trace": "*",
    "@packages/rough-notation": "*",
    "@packages/utils": "*",
    "@sentry/nextjs": "^6",
    "@sindresorhus/slugify": "^2",
    "@tailwindcss/forms": "^0",
    "@tailwindcss/line-clamp": "^0",
    "@tailwindcss/typography": "^0",
    "autoprefixer": "^10",
    "classnames": "^2",
    "dagre": "^0",
    "date-fns": "^2",
    "date-fns-tz": "^1",
    "fathom-client": "^3",
    "favicons": "^6",
    "feed": "^4",
    "kbar": "0.1.0-beta.27",
    "lucide-react": "^0",
    "medium-zoom": "^1",
    "next": "^12",
    "next-seo": "^4",
    "next-sitemap": "^1",
    "next-superjson": "^0",
    "next-transpile-modules": "^9",
    "path-browserify": "^1",
    "postcss": "^8",
    "react": "^17",
    "react-dom": "^17",
    "react-flow-renderer": "^9",
    "react-hook-form": "^7",
    "react-hot-toast": "^2",
    "rehype-raw": "^6",
    "rehype-slug": "^5",
    "remark-frontmatter": "^4",
    "remark-gfm": "^3",
    "remark-mdx-frontmatter": "^1",
    "remark-toc": "^8",
    "shiki": "^0",
    "superjson": "^1",
    "tailwindcss": "^3",
    "twemoji": "^13",
    "typescript": "^4",
    "unist-util-visit": "^4",
    "url": "^0",
    "zustand": "^3"
  },
  "devDependencies": {
    "@packages/tsconfig": "*",
    "@types/dagre": "^0",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/tailwindcss": "^2",
    "eslint": "^8",
    "eslint-config-kdnj": "^2",
    "eslint-plugin-tailwindcss": "^1"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react"
    ],
    "plugins": [
      "tailwindcss"
    ],
    "ignorePatterns": [
      ".next",
      "__generated__",
      "node_modules"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "off"
      ],
      "tailwindcss/classnames-order": [
        "warn"
      ]
    },
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "yarn workspace griko.id prettier --write"
    ],
    "**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "yarn workspace griko.id eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
