{
  "name": "opengraph.griko.id",
  "version": "0.0.0",
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "git:pre-commit": "lint-staged",
    "validate": "eslint --fix --no-cache && tsc --noEmit --pretty",
    "#": "-------------------------------------------------------------------"
  },
  "dependencies": {
    "@vercel/node": "^1",
    "chrome-aws-lambda": "^10",
    "puppeteer-core": "^13",
    "typescript": "^4"
  },
  "devDependencies": {
    "@types/node": "^14",
    "@types/puppeteer": "^5",
    "eslint": "^7",
    "eslint-config-kdnj": "^1",
    "puppeteer": "^13"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "**/*.{js,cjs,mjs,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "private": true
}
