{
  "name": "bulma.griko.id",
  "version": "0.0.0",
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "build": "next build",
    "clean": "shx rm -rf .next/",
    "dev": "next",
    "lint": "eslint --fix \"**/*.{js,cjs,mjs,jsx,ts,tsx}\" && tsc --noEmit --pretty",
    "vercel-build": "cd ../.. && yarn build:bulma.griko.id",
    "#": "-------------------------------------------------------------------"
  },
  "dependencies": {
    "@packages/assets": "*",
    "@packages/hooks": "*",
    "@packages/utils": "*",
    "bulma": "^0",
    "classnames": "^2",
    "lucide-react": "^0",
    "next": "^12",
    "next-seo": "^4",
    "next-sitemap": "^1",
    "next-superjson": "^0",
    "next-transpile-modules": "^9",
    "react": "^17",
    "react-dom": "^17",
    "superjson": "^1",
    "typescript": "^4"
  },
  "devDependencies": {
    "@packages/tsconfig": "*",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "eslint": "^8",
    "eslint-config-kdnj": "^2"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj/react"
    ],
    "ignorePatterns": [
      ".next",
      "node_modules"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "off"
      ]
    },
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "license": "MIT"
}
