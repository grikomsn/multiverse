{
  "name": "personal-websites",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "# general commands": "--------------------------------------------------",
    "clean": "turbo run clean",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "lint": "turbo run lint",
    "postinstall": "patch-package",
    "prepare": "husky install $PWD/.husky",
    "purge": "shx rm -rf node_modules/.cache/ packages/**/.turbo/ website/.turbo/",
    "trace-lockfile": "node scripts/trace-lockfile.mjs",
    "# scope commands": "----------------------------------------------------",
    "bulma.griko.id": "yarn workspace bulma.griko.id",
    "griko.dev": "yarn workspace griko.dev",
    "griko.id": "yarn workspace griko.id",
    "opengraph.griko.id": "yarn workspace opengraph.griko.id",
    "build:bulma.griko.id": "turbo run build --scope=bulma.griko.id --include-dependencies --no-deps",
    "build:griko.dev": "turbo run build --scope=griko.dev --include-dependencies --no-deps",
    "build:griko.id": "turbo run build --scope=griko.id --include-dependencies --no-deps",
    "#": "-------------------------------------------------------------------"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "globalDependencies": [
      "yarn.lock"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**"
        ]
      },
      "clean": {
        "cache": false
      },
      "git:pre-commit": {
        "cache": false
      },
      "lint": {
        "dependsOn": [
          "^lint"
        ]
      }
    }
  },
  "devDependencies": {
    "@yarnpkg/lockfile": "^1",
    "husky": "^7",
    "lint-staged": "^12",
    "patch-package": "^6",
    "postinstall-postinstall": "^2",
    "shx": "^0",
    "turbo": "^1"
  },
  "resolutions": {
    "@types/node": "^14",
    "arg": "^5",
    "argparse": "^2",
    "bmp-js": "^0",
    "bn.js": "^5",
    "browserslist": "^4",
    "buffer": "^5",
    "chokidar": "^3",
    "classnames": "^2",
    "cli-truncate": "^2",
    "color-convert": "^2",
    "color-name": "^1",
    "colors": "1.4.0",
    "convert-source-map": "^1",
    "core-util-is": "^1",
    "cross-spawn": "^7",
    "cssom": "^0",
    "data-uri-to-buffer": "^3",
    "debug": "^4",
    "diff": "^5",
    "doctrine": "^3",
    "emojis-list": "^3",
    "eslint-visitor-keys": "^3",
    "estraverse": "^5",
    "extsprintf": "^1",
    "file-type": "^17",
    "find-cache-dir": "^3",
    "find-up": "^4",
    "fs-extra": "^10",
    "get-stream": "^6",
    "glob-parent": "^6",
    "globals": "^13",
    "iconv-lite": "^0",
    "ignore": "^5",
    "image-size": "^1",
    "is-arrayish": "^0",
    "jimp": "^0",
    "jpeg-js": "^0",
    "js-yaml": "^4",
    "json-schema-traverse": "^1",
    "json5": "^2",
    "loader-utils": "^1",
    "locate-path": "^5",
    "mkdirp": "^0",
    "ms": "^2",
    "node-fetch": "^2",
    "optionator": "^0",
    "p-limit": "^3",
    "p-locate": "^5",
    "postcss": "^8",
    "prelude-ls": "^1",
    "punycode": "^2",
    "queue": "^6",
    "react-is": "^17",
    "readable-stream": "^3",
    "regenerator-runtime": "^0",
    "resolve": "^1",
    "rimraf": "^3",
    "safe-buffer": "^5",
    "semver": "^7",
    "shebang-command": "^2",
    "slash": "^3",
    "slice-ansi": "^4",
    "source-map": "^0",
    "string-width": "^4",
    "strip-ansi": "^6",
    "strip-json-comments": "^3",
    "supports-color": "^8",
    "tailwindcss": "^3",
    "tslib": "^2",
    "type-fest": "^0",
    "typescript": "^4",
    "universalify": "^2",
    "wrap-ansi": "^7",
    "ws": "^8"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-kdnj"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "private": true
}
