{
  "name": "griko.id",
  "version": "0.0.0",
  "packageManager": "yarn@1.22.18",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "turbo run build --filter=\"website\" --no-cache",
    "deduplicate": "npx yarn-deduplicate && yarn install",
    "dev": "yarn workspace website next dev",
    "export": "turbo run export --filter=\"website\" --no-cache",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "start": "turbo run start --filter=\"website\" --no-cache",
    "website": "yarn workspace website"
  },
  "devDependencies": {
    "env-cmd": "^10",
    "husky": "^7",
    "lint-staged": "^12",
    "postinstall-postinstall": "^2",
    "shx": "^0",
    "turbo": "^1"
  },
  "eslintConfig": {
    "extends": [
      "@project/eslint-config"
    ],
    "ignorePatterns": [
      "node_modules"
    ],
    "root": true
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": "@project/prettier-config",
  "private": true,
  "license": "MIT"
}
